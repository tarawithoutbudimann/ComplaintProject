<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="DETAIL COMPLAINT "
        android:textAlignment="center"
        android:fontFamily="@font/poppins_extrabold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/round"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tvDetailName"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/round"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvDetailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/tvDetailTitle"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/round"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_below="@id/tvDetailContent"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="16dp"
            android:onClick="editComplaint"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/tvDetailContent"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/btnEdit"
            android:onClick="deleteComplaint"
            android:backgroundTint="@color/black"/>
    </LinearLayout>
</LinearLayout>
